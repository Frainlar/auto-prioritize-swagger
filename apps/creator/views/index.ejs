<% layout('layout') -%>
  <% block('title', 'Creator' ) %>

    <h3 class="mb-3">Create Story</h3>

    <% if (error) { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
      <% } %>

        <form method="post" action="/create" class="card p-3 shadow-sm">
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input name="title" required class="form-control" value="<%= defaults.title %>"
              placeholder="As a user, I want ...">
          </div>
          <div class="mb-3">
            <label class="form-label">Summary</label>
            <textarea name="summary" rows="3" class="form-control"
              placeholder="Short summary"><%= defaults.summary %></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Tags (comma-separated)</label>
            <input name="tags" class="form-control" value="<%= defaults.tags %>" placeholder="auth, ux">
          </div>
          <button class="btn btn-dark" type="submit">Send Webhook to Analyzer</button>
        </form>

        <p class="mt-3 text-muted small">
          Webhook target: <code><%= process.env.ANALYZER_WEBHOOK_URL %></code>
        </p>