<% layout('layout') -%>
  <% block('title', 'Creator · Result' ) %>

    <h3 class="mb-3">Webhook Delivered</h3>
    <p class="text-muted">Item ID: <strong>
        <%= result.id %>
      </strong></p>

    <p><span class="badge text-bg-primary">
        <%= result.analysis.priority %>
      </span></p>
    <p><strong>Description:</strong>
      <%= result.analysis.description %>
    </p>

    <h5 class="mt-4">Acceptance Criteria</h5>
    <ul>
      <% result.analysis.acceptance_criteria.forEach(ac=> { %>
        <li>
          <%= ac %>
        </li>
        <% }) %>
    </ul>

    <h5 class="mt-3">Test Cases</h5>
    <ul class="list-group">
      <% result.analysis.test_cases.forEach(tc=> { %>
        <li class="list-group-item">
          <div><strong>
              <%= tc.name %>
            </strong> <span class="badge text-bg-secondary">
              <%= tc.type %>
            </span></div>
          <% if (tc.preconditions?.length) { %>
            <div class="small text-muted">Pre: <%= tc.preconditions.join(', ') %></div>
      <% } %>
      <div class="small">Steps: <%= tc.steps.join(' → ') %></div>
      <div class="small">Expected: <%= tc.expected_result %></div>
    </li>
  <% }) %>
</ul>

<a class="btn btn-link mt-3" href="/">← Create another</a>